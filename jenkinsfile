pipeline {
    agent any

    stages {
        stage('Checkout') {
            steps {
                git 'https://github.com/petermwenda87/gallery.git'
            }
        }

        stage('Install Dependencies') {
            steps {
                sh 'npm install'
            }
        }

        stage('Deploy to Render') {
            steps {
                sh 'node server.js &'
            }
        }
    }
}
